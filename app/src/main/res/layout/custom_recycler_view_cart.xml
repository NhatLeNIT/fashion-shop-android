<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/sanphammoi2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="2 balo ca tinh"
                android:textColor="@color/colorBlack180"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="99.000 VND"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="10"
                >
                <ImageButton
                    android:id="@+id/imageButtonDecreaseQuantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    />
                <TextView
                    android:id="@+id/textViewQuantity"
                    android:inputType="numberSigned"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:layout_weight="2"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    />
                <ImageButton
                    android:id="@+id/imageButtonIncreaseQuantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
                <ImageButton
                    android:id="@+id/imageButtonWishList"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorWhite"
                    android:src="@drawable/icons8_heart_outline_32" />

                <ImageButton
                    android:id="@+id/imageButtonDelItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorWhite"
                    android:src="@drawable/icons8_trash_32" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>