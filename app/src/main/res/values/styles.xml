<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bgToolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorLogo</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:color">#0000FF</item>
    </style>
    <style name="MenuItemColorWhite" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="drawerArrowStyle">@style/ChangeColorDrawerToggle</item>
        <item name="android:textColor">@color/bgToolbar</item>
    </style>
    <style name="MenuItemColor" parent="AppTheme">
        <item name="android:textColorPrimary">@color/bgToolbar</item>
        <item name="drawerArrowStyle">@style/ChangeColorDrawerToggle</item>
    </style>
    <style name="ChangeColorDrawerToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorWhite</item>
    </style>
    <style name="CapFalse" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <style name="tabColor" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>
    <declare-styleable name="PasswordEditText">
        <attr name="useStrike" format="boolean"/>
        <attr name="useValidate" format="boolean"/>
    </declare-styleable>
</resources>
